{
  "name": "hsp-fo-workspace",
  "version": "1.9.62",
  "description": "Display manuscript descriptions and digital images of manuscripts within a multi window workspace",
  "license": "MIT",
  "files": [
    "dist/",
    "declaration/",
    "types.ts"
  ],
  "scripts": {
    "clean": "shx rm -rf ./node_modules ./dist ./test-reports ./target ./declaration *.tgz",
    "fix:prettier": "prettier --write \"./{src,test,locales}/**/*.{css,md,js,jsx,json,ts,tsx}\"",
    "lint": "eslint './{src,test}/**/*'",
    "test": "jest --clearCache && jest",
    "test:light": "jest --clearCache && jest --coverage=false",
    "build:dev": "rm -rf ./dist && webpack --mode=development --watch",
    "build": "rm -rf ./dist && webpack --mode=production && tsc --project tsconfig.declaration.json && webpack --mode=production --config webpack.config.standalone.js",
    "start": "wait-on dist/ && shx cp src/index.html dist/index.html && shx cp fixtures/* dist && http-server dist",
    "dev": "webpack serve --mode=development",
    "deb": "echo not in use",
    "version": "echo $npm_package_version | tr -d '\n'",
    "artefactid": "echo $npm_package_name | tr -d '\n'",
    "commit": "git-cz",
    "prepare": "husky install"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/handschriftenportal-dev/hsp-fo-workspace"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.1",
    "@commitlint/config-conventional": "^17.4.0",
    "@testing-library/react": "^11.2.5",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/css-mediaquery": "^0.1.0",
    "@types/jest": "^29.5.10",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "@types/react-redux": "^7.1.16",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "clean-webpack-plugin": "^4.0.0",
    "commitizen": "^4.2.6",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.22.0",
    "http-server": "^14.1.1",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.1.0",
    "prettier-plugin-sort-json": "^3.1.0",
    "redux-devtools-extension": "^2.13.9",
    "shx": "^0.3.4",
    "style-loader": "^3.3.1",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.1.2",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "typescript": "^5.3.2",
    "wait-on": "^7.0.1",
    "webpack": "^5.63.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  },
  "dependencies": {
    "@fontsource/roboto": "^5.0.8",
    "@material-ui/core": "^4.11.3",
    "@reduxjs/toolkit": "^1.9.5",
    "css-mediaquery": "^0.1.2",
    "hsp-web-module": "1.30.5",
    "hsp-fo-mirador": "^1.7.59",
    "flatted": "^3.3.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "redux": "^4.0.5",
    "redux-persist": "^6.0.0",
    "uuid": "^9.0.0"
  }
}
